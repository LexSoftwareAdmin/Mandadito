<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ionic.mandaditoadmin" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>El Mandadito Administrador</name>
    <description>Una aplicacion para tu gestion de productos.</description>
    <author email="mobvi68@gmail.com" href="https://www.lexsoftware.net/">Lex Software</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Necesitamos usar el acceso a la camara para poder tomar fotos a los productos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Necesitamos usar el acceso a la libreria de fotos para escoger una foto a los productos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
        <string>Necesitamos usar el acceso a la libreria de fotos para escoger una foto a los productos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSBluetoothPeripheralUsageDescription">
        <string>Necesitamos usar el acceso al Bluetooth para comunicarnos con la impresora</string>
    </edit-config>
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
